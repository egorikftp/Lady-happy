<resources>

    <style name="MainActivityStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/RoseTaupe</item>
        <item name="colorPrimaryDark">@color/RoseTaupeDark</item>
        <item name="colorAccent">@color/Terracota</item>
        <item name="android:textColorSecondary">@color/RealWhite</item>
    </style>

    <style name="BottomSheetDialog" parent="Theme.MaterialComponents.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/white</item>
        <item name="colorAccent">@color/Terracota</item>
    </style>

    <style name="BottomSheet" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_bottom_sheet_dialog_fragment</item>
    </style>
</resources>
